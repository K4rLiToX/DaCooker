<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/ingredient_name_add_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/add_ingredient_listView_name"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/ingredient_quantity_add_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/add_ingredient_listView_quantity"
                android:layout_weight="1"
                android:layout_marginStart="4dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/add_ingredient_listView_btnDelete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:icon="@android:drawable/ic_delete"
            app:iconGravity="textEnd"
            app:iconPadding="2sp"/>

    </LinearLayout>

</RelativeLayout>