<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_margin="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3">

            <TextView
                android:id="@+id/ingredient_name_add_listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Body2"
                android:text="@string/add_ingredient_listView_name"/>

            <TextView
                android:id="@+id/ingredient_quantity_add_listView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TextAppearance.AppCompat.Small"
                android:text="@string/add_ingredient_listView_quantity"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/add_ingredient_listView_btnDelete"
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_trash"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>