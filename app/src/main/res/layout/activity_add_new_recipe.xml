<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.AddNewRecipeActivity">

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/add_recipe_tab_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/red_500"
            app:tabTextColor="@color/white"
            app:tabIndicatorColor="@color/white"
            app:tabSelectedTextColor="@color/white"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/add_recipe_viewPager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/add_recipe_tab_layout"/>

        <Button
            android:id="@+id/btnFinish_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/add_recipe_btnFinish"
            android:layout_alignParentBottom="true"/>

        <Button
            android:id="@+id/btnValidate_activity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="@string/add_recipe_btnValidate"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>