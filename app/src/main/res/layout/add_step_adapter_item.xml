<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <TextView
                android:id="@+id/step_order_add_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/add_step_listView_order"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/step_description_add_listView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:text="@string/add_step_listView_description"
                android:layout_weight="1"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/step_hours_add_listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/add_step_listView_hours"/>

                <TextView
                    android:id="@+id/step_minutes_add_listView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:text="@string/add_step_listView_minutes"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/add_step_listView_btnDelete"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:icon="@android:drawable/ic_delete"
                app:iconGravity="textEnd"
                app:iconPadding="2sp" />

            <Button
                android:id="@+id/add_step_listView_btnUpdate"
                android:layout_width="32dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginStart="3dp"
                app:icon="@android:drawable/ic_menu_edit"
                android:backgroundTint="@color/teal_700"
                app:iconGravity="textEnd"
                app:iconPadding="2sp"/>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>